header.header
    .container.flex.ai-center.jc-between
        .header__logo 
            include ../../../images/logo.svg
        nav.header__nav.desktop-visible
            ul.header__menu.header-desk.flex
                for link in nav 
                    li
                        a(href=link.link)= link.title
        button.header__btn.btn.btn--white Розрахунок вартості
        .header__lang.togle-lang.lang.desktop-visible.flex.ai-center
            .lang__ua
                p UA
            .lang__divider 
                p /
            .lang__eng
                p ENG
        .header__mobile-btn.mobile-btn.mobile-visible
            a#hamburger.hamburger
                span.line
                span.line
                span.line


.header__menu-mobile.header-mob
